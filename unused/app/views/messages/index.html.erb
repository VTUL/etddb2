<h1>Listing messages</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Sender</th>
    <th>Recipient</th>
    <th>Read?</th>
    <th>About</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.msg %></td>
    <td><%= message.sender.name %></td>
    <td><%= message.recipient.name %></td>
    <td><%= message.read %></td>
    <td><%= message.model_type %> <%= message.model_id %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= button_to 'Destroy', destroy_message_path(message), data: {confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

<br />

