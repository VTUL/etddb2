<h1> Listing permissions</h1>

<table>
<tr>
</tr>
<% if @ability.can? :assign_permission, Permission %>
<% @roles.each do |permission| %>
  <tr>
    <td><%=h permission.name %></td>
    <td><%= link_to 'Show', url_for(:controller=>:admin,:action=>:show_permission, :id=>permission.id) %></td>
    <td><%= link_to 'Edit', url_for(:controller=>:admin,:action=>:edit_permission, :id=>permission.id) %></td>
    <td><%= link_to 'Destroy', permission, :confirm => 'Are you sure?', :method => :delete_permission %></td>
  </tr>
<% end %>
<% end %>
</table>

<br />

<%= link_to 'New role', url_for(:controller=>:admin,:action=>:add_permission) %>

