
<%= stylesheet_link_tag 'paginate' %>
<h3>Committee Etds</h3>
<%= will_paginate @committee_etds, :param_name=>'page_committee' %>
<table>
  <tr>
    <th>Title</th>
    <th>Authors</th>
  </tr>

<% @committee_etds.each do |etd| %>
  <tr>
    <td><%= link_to(etd.title.html_safe, etd_path(etd)) %></td>
    <td><%= Person.where(id: etd.people_roles.where(role_id: Role.where(group: "Creators")).pluck(:person_id)).order('last_name ASC').map { |p| p.name } .join(', ') %></td>
    <td style="font-variant: small-caps"><%= link_to("[reviewboard]", etd_reviewboard_path(etd)) %></td>
    <td>
      <%= form_tag(vote_for_etd_path(etd)) do %>
        <%= select_tag(:vote, options_for_select([['Approve', true], ['Disapprove', false]])) %>
        <%= submit_tag('Vote') %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
<br />
