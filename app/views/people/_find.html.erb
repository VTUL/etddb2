  <div id="candidates">
    <table>
      <% @name = params[:name].upcase %>
      <% @candidates = Person.where("UPPER(first_name) LIKE '%#{@name}%' OR UPPER(last_name) LIKE '%#{@name}%' OR UPPER(display_name) LIKE '%#{@name}%'") %>
      <% for candidate in @candidates do %>
        <tr>
          <td><%= radio_button_tag("committee", candidate.id) %></td>
          <td><%= candidate.name %></td>
        </tr>
      <% end %>
    </table>
    <%= select_tag(:committee_type, options_for_select(['Committee Member', 'Committee Chair', 'Committee Co-Chair'])) %>
  </div>
