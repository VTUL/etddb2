<%= form_for(@availability) do |f| %>
  <% if @availability.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@availability.errors.count, "error") %> prohibited this availability from being saved:</h2>

      <ul>
      <% @availability.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @reason.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reason.errors.count, "error") %> prohibited this availability from being saved:</h2>

      <ul>
      <% @reason.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label(:name) %><br />
    <%= f.text_field(:name) %>
  </div>
  <div class="field">
    <%= f.label(:description) %><br />
    <%= f.text_area(:description) %>
  </div>
  <div class="field">
    <%= f.label(:retired) %><br />
    <%= f.check_box(:retired, {}, true, false) %>
  </div>
  <div class="field">
    <%= f.label(:access_restriction) %><br />
    <%= f.select(:access_restriction, options_for_select(@restriction_options, @availability.access_restriction)) %>
  </div>
  <div class="field">
    <%= f.label(:etd_only, "Only allow for ETDs?") %><br />
    <%= f.check_box(:etd_only, {}, true, false) %>
  </div>
  <div class="field">
    <%= label(:reason, :months_to_warning) %><br />
    <%= text_field(:reason, :months_to_warning) %>
  </div>
  <div class="field">
    <%= label(:reason, :months_to_release) %><br />
    <%= text_field(:reason, :months_to_release) %>
  </div>
  <div class="field">
    <%= f.label(:allows_reasons, "Allow other release schedules?") %><br />
    <%= f.check_box(:allows_reasons, {}, true, false) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
