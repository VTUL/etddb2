<%= stylesheet_link_tag 'paginate' %>
<h1 style="width: 40%; float: left;">Listing availabilities</h1>
<div id="page_pref" class ="top_bar" style="margin-top:28px">
  <%= form_tag @person, :method => 'get' do %>
    Results Per Page: <%= select_tag :per_page, options_for_select(%w[10 20 50 100], @per_page),
         :onchange => "this.form.submit();" %>
  <% end %>
</div>
<%= will_paginate @availabilities %>
<br/>
<table style="clear: left;">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Retired?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @availabilities.each do |availability| %>
  <tr>
    <td><%= availability.name %></td>
    <td><%= availability.description %></td>
    <td><%= availability.retired %></td>
    <td><%= link_to 'Show', availability %></td>
    <td><%= link_to 'Edit', edit_availability_path(availability) %></td>
    <td><%= button_to 'Destroy', destroy_availability_path(availability), data: {confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Availability', new_availability_path %>
