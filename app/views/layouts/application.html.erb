<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div>
      <%= render('layouts/custom_layout/header') %>
      <section>
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
        <%= yield %>
      </section>
      <%= render('layouts/custom_layout/footer') %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
