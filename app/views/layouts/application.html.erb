<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <%= render 'layouts/metadata' if File.exists?("app/views/layouts/_metadata.html.erb")%>
        <%= render 'layouts/stylesheets' if File.exists?("app/views/layouts/_stylesheets.html.erb")%>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tag %>
    </head>
    <body>
        <%= File.exists?("app/views/layouts/custom_layout/_header_fluid.html.erb") ? render('layouts/custom_layout/header_fluid') : render('layouts/header') %>
        <div id="yield">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
            <%= yield %>
        </div>
        <%= File.exists?("app/views/layouts/custom_layout/_footer_fluid.html.erb") ? render('layouts/custom_layout/footer_fluid') : render('layouts/footer') %>
        <%= debug(params) if Rails.env.development? %>
    </body>
</html>
