<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= render 'layouts/metadata' if File.exists?("app/views/layouts/_metadata.html.erb")%>
		<%= render 'layouts/stylesheets' %>
		<%= csrf_meta_tag %>
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
		<div id="page-area">
			<%= File.exists?("app/views/layouts/custom_layout/_header.html.erb") ? render('layouts/custom_layout/header') : render('layouts/header') %>
			<div id="yield">
				<% flash.each do |key, value| %>
					<%= content_tag(:div, value, :class => "flash #{key}") %>
				<% end %>
				<%= yield %>
			</div>
			<%= File.exists?("app/views/layouts/custom_layout/_footer.html.erb") ? render('layouts/custom_layout/footer') : render('layouts/footer') %>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>
