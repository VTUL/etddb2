<div id="navigation">
  <h3>NAVIGATION:</h3>
  <ul>
    <% if person_signed_in? %>
      <li>
        <%= link_to('My Profile', person_path(current_person)) %>
      </li>
      <li>
        <% unread = current_person.mailbox.inbox(unread: true).count(:id, distinct: true) %>
        <%= link_to("Messages (#{unread})", conversations_path) %>
      </li>
      <li>
        <%= link_to('Edit Profile', edit_person_registration_path) %>
      </li>
      <li>
        <%= link_to('Logout', logout_path) %>        
      </li>
    <% else %>
      <li>
        <%= link_to('Register', new_person_registration_path)  %>
      </li>
      <li>
        <%= link_to('Login', new_person_session_path)  %>  
      </li>
    <% end %>
  </ul>
  <p>
  <%# TODO: Controller select box goes here? %>
  </p>
</div>
