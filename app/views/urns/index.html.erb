<h1>Listing urns</h1>

<table>
  <tr>
    <th>Urn</th>
  </tr>

<%= @urns.each do |urn| %>
  <tr>
    <td><%=h urn.urn %></td>
    <td><%= link_to 'Show', urn %></td>
    <td><%= link_to 'Edit', edit_urn_path(urn) %></td>
    <td><%= link_to 'Destroy', urn, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New urn', new_urn_path %>
