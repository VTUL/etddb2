<%= stylesheet_link_tag 'paginate' %>
<h1 style="float:left;">Listing document_types</h1>
<div id="page_pref" class ="top_bar" style="margin-top:28px">
  <%= form_tag document_types_path, :method => 'get' do %>
    Results Per Page: <%= select_tag :per_page, options_for_select(%w[10 20 50 100], @per_page),
         :onchange => "this.form.submit();" %>
  <% end %>
</div>
<%= will_paginate @document_types %>
<table style="clear: both;">
  <tr>
    <th>Name</th>
    <th>Retired?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @document_types.each do |document_type| %>
  <tr>
    <td><%= document_type.name %></td>
    <td><%= document_type.retired %></td>
    <td><%= link_to 'Show', document_type %></td>
    <td><%= link_to 'Edit', edit_document_type_path(document_type) %></td>
    <td><%= button_to 'Destroy', destroy_document_type_path(document_type), data: {confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Document type', new_document_type_path %>
