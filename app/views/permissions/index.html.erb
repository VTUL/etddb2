<h1>Listing permissions</h1>

<% for a_role in @roles %>
  <p><b> <%= a_role.name.humanize %> </b>
  <table border="1">
    <tr>
      <td>
        Digital Objects\Actions
      </td>
      <% for an_action in @actions %>
        <td>
          <%= an_action.name.humanize %>
        </td>
      <% end %>
    </tr>
    <% for a_digital_object in @digital_objects %>
      <tr>
        <td>
          <%= a_digital_object.name.humanize %>
        </td>
        <% for an_action in @actions %>
          <% if Permission.exists?(:user_action_id => an_action.id, :role_id => a_role.id, :digital_object_id => a_digital_object.id) %>
            <td>
              <%= check_box_tag "REDO", "#{a_role.id}_#{a_digital_object.id}_#{an_action.id}", true, :disabled => true%>
            </td>
          <% else %>
            <td>
              <%= check_box_tag "REDO", "#{a_role.id}_#{a_digital_object.id}_#{an_action.id}", false, :disabled => true%>
            </td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
  </p>
  <br />
<% end %>


<p><%#= link_to 'Edit', edit_permission_path %></p>
