<h1>Listing messages</h1>

<table>
  <tr>
    <th>Message</th>
    <th>Sender</th>
    <th>Recipient</th>
    <th>Read?</th>
    <th>About</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.msg %></td>
    <td><%= get_name(message.sender) %></td>
    <td><%= get_name(message.recipient) %></td>
    <td><%= message.read %></td>
    <td><%= message.model_type %> <%= message.model_id %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

