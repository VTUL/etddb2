<%= stylesheet_link_tag 'paginate' %>
<h1 style="float:left;">Listing privacy_statements</h1>
<div id="page_pref" class ="top_bar" style="margin-top:28px">
  <%= form_tag privacy_statements_path, :method => 'get' do %>
    Results Per Page: <%= select_tag :per_page, options_for_select(%w[10 20 50 100], @per_page),
         :onchange => "this.form.submit();" %>
  <% end %>
</div>
<%= will_paginate @privacy_statements %>
<table style="clear: both;">
  <tr>
    <th>Statement</th>
    <th>Retired?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @privacy_statements.each do |privacy_statement| %>
  <tr>
    <td><%= privacy_statement.statement %></td>
    <td><%= privacy_statement.retired %></td>
    <td><%= link_to 'Show', privacy_statement %></td>
    <td><%= link_to 'Edit', edit_privacy_statement_path(privacy_statement) %></td>
    <td><%= button_to 'Destroy', destroy_privacy_statement_path(privacy_statement), data: {confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Privacy statement', new_privacy_statement_path %>
