<h1>New conversation</h1>

<%= form_for(@conv, url: create_conversation_path) do |f| %>
  <% if @conv.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conv.errors.count, "error") %> prohibited this conversation from being saved:</h2>

      <ul>
      <% @conv.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= label_tag :participants, "To" %><br />
    <% if params[:static_participants] == 'true' %>
      <%= @participants.map { |p| p.name } .join(', ') %>
      <% params[:participants].each do |id| %>
        <%= hidden_field_tag("conversation[participant_ids][]", id) %>
      <% end %>
    <% else %>
      <% @participants.each do |p| %>
        <select name="conversation[participant_ids][]">
          <%= options_from_collection_for_select(p, :id, :name) %>
        </select>
      <% end %>
    <% end %>
    <%= hidden_field_tag(:static_participants, params[:static_participants]) %>
  </div>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <%= f.hidden_field(:model_type, {value: @conv.model_type}) %>
  <%= f.hidden_field(:model_id, {value: @conv.model_id}) %>
  <% if params[:static_participants] == 'true' %>
    <% params[:participants].each do |id| %>
      <%= hidden_field_tag("participants[]", id) %>
    <% end %>
  <% else %>
    <%= hidden_field_tag(:participants, params[:participants]) %>
  <% end %>

  <%= f.fields_for :messages do |m| %>
  <div class="field">
    <%= m.label :msg, "Message" %><br />
    <%= m.text_area :msg %>
  </div>
  <%= m.hidden_field(:sender_id, {value: current_person.id}) %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', conversations_path %>
