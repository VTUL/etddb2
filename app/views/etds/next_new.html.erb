<h1>New ETD</h1>
<p>
<table class="outlined">
  <tr>
    <th>Uploaded Files:</th>
    <th>File Size:</th>
    <th></th>
  </tr>
  <% for c in @etd.contents do %>
    <tr>
      <td><%= c.uploaded_file_name %></td>
      <td><%= c.uploaded_file_size %></td>
      <td><%= link_to 'Change File Availabilty', contents_change_availability_path(c) %></td>
    </tr>
  <% end%>
</table>
<%= form_tag(:controller => "contents", :action => "new") do %>
  <%= hidden_field_tag(:etd_id, @etd.id) %>
  <%= submit_tag "Add New Content" %>
<% end %>
</p>
<p>
<table class="outlined">
  <tr>
    <th>Person:</th>
    <th>Role:</th>
  </tr>
  <% for pr in @prs do %>
    <tr>
      <td><%= pr[:first_name] + " " + pr[:last_name] %></td>
      <td><%= pr[:role] %></td>
    </tr>
  <% end %>
</table>
<%= form_tag(:controller => "people", :action => "find") do %>
  <%= hidden_field_tag(:etd_id, @etd.id) %>
  <%= submit_tag "Add New Committee Member" %>
<% end %>
</p>
<p>
<%= link_to 'Back to ETDs', etds_path %>
</p>
